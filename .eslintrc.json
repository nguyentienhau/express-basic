{
	"env": {
		"browser": true,
		"es2021": true,
		"commonjs": true,
		"node": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["spellcheck"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"spellcheck/spell-checker": [
			"warn",
			{
				"comments": true,
				"strings": true,
				"identifiers": true,
				"lang": "en_US",
				"skipWords": ["dict", "bool", "utils", "func", "mysql"],
				"skipIfMatch": ["http://[^s]*"],
				"skipWordIfMatch": ["^foobar.*$"],
				"minLength": 3
			}
		]
	}
}
